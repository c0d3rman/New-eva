{
  "name": "New-eva",
  "version": "2.3",
  "description": "Improves the Nueva website.",
  "background": { "scripts": ["background.js"] },
  "web_accessible_resources" : ["dynamictag.js", "images/*.png"],
  "options_page": "options.html",
  "page_action" :
  {
    "default_icon" : "images/icon-19.png",
    "default_title" : "New-eva",
    "default_popup" : "popup.html"
  },
  "permissions" : [
    "tabs",
    "https://my.nuevaschool.org/*",
    "http://my.nuevaschool.org/*",
    "http://txt.do/",
    "http://textuploader.com/",
    "alarms",
    "storage",
    "background"
  ],
  "icons" : {
    "48" : "images/icon-48.png",
    "128" : "images/icon-128.png"
  },
  "content_scripts": [{
        "js": ["contentscript.js"],
        "matches": ["https://my.nuevaschool.org/*", "http://my.nuevaschool.org/*"]
  }],
  "background": {
  	"scripts": ["background.js"],
  	"persistent": false
  },
  "manifest_version": 2
}
