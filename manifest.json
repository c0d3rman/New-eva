{
	"name": "New-eva",
	"version": "4.0.0",
	"manifest_version": 2,
	"description": "New-eva improves the Nueva website, stopping annoying login timeouts and prettyfing pages.",
	"author": "Yoni Lerner",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	},
	"default_locale": "en",
	"background": {
		"scripts": [
			"src/options_custom/lib/store.js",
			"js/jquery/jquery.min.js",
			"src/bg/background.js"
		],
		"persistent": false
	},
	"options_page": "src/options_custom/index.html",
	"page_action": {
		"default_icon": "icons/icon19.png",
		"default_title": "New-eva",
		"default_popup": "src/page_action/page_action.html"
	},
	"content_scripts": [{
		"js": [
			"src/content_script/autorefresh.js",
			"js/jquery/jquery.min.js",
			"src/content_script/global.js",
			"src/content_script/homeworkcalendar.js",
			"src/content_script/bgrvisual.js"
		],
		"matches": [
			"https://my.nuevaschool.org/*",
    		"http://my.nuevaschool.org/*"
		]
	}],
	"web_accessible_resources" : ["js/jquery/*", "images/*.png", "/images/loading.gif"],
	"permissions": [
		"https://my.nuevaschool.org/*",
		"http://my.nuevaschool.org/*",
		"https://nuevaschool.org/*",
		"http://nuevaschool.org/*",
		"tabs",
		"storage",
		"alarms"
	]
}